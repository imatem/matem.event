<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">


    <metal:block fill-slot="style_slot">
        <style type="text/css">
          .content-core img {
            width: 100%;
            margin-bottom: 1em;
            }

        .masonry {
        display: grid;
        grid-gap: 1em 2em; /* [1] Add some gap between rows and columns */
        grid-template-columns: repeat( auto-fill, minmax( 250px, 1fr ) ); /* [2] Make columns adjust according to the available viewport */
        }
        </style>
    </metal:block>

<body>





    <metal:content-core fill-slot="content-core">
        <metal:block use-macro="context/folder_listing/macros/content-core">
            <!-- we don't want the dl -->
            <metal:entries fill-slot="entries">
                <div class="masonry">
                <metal:block use-macro="context/folder_listing/macros/entries">
                    <metal:entry fill-slot="entry">
                        <img tal:attributes="src string:${item/getURL}/@@images/image"/>
                    </metal:entry>
                </metal:block>
                </div>
            </metal:entries>
        </metal:block>
    </metal:content-core>

</body>
</html>

